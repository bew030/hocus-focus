{
  "manifest_version": 2,

  "name": "Study Aid",
  "description": "This extension will help you study",
  "version": "1.0",
  "options_page": "options.html",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "icons": {
    "16": "extension_images/address_book.png",
    "48": "extension_images/address_book.png",
    "128": "extension_images/address_book.png"},

  "browser_action": {
   "default_icon": "extension_images/address_book.png",
   "default_popup": "popup.html"
  },
  "permissions": [
   "activeTab",
   "storage",
   "webNavigation",
   "tabs"
   ]
}
